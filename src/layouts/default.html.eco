<!doctype html>
<html itemscope itemtype="http://schema.org/Event">
<head>

  <title itemprop="name"><%= @conf.name %></title>

  <meta charset="utf-8">
  <meta name="author" content="<%= @conf.name %>">
  <meta name="description" content="<%= @conf.description %>">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <!-- FACEBOOK -->
  <meta property="fb:app_id" content="372862979453673">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= @site.url %>">
  <meta property="og:title" content="<%= @conf.name %>">
  <meta property="og:description" content="<%= @conf.description %>">
  <meta property="og:image" content="<%= @site.images.facebook %>">
  <!-- / FACEBOOK -->

  <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
  <link rel="apple-touch-icon" href="img/apple-touch-icon.png">

  <!-- STYLES -->
  <link rel="stylesheet" type="text/css" href="css/reset.css">
  <link rel="stylesheet" type="text/css" href="css/base.css">
  <link rel="stylesheet" type="text/css" href="css/theme.css">
  <% if @ThemeColor.state == true: %>
    <!-- COLOR THEMES -->
    <style type="text/css">
      .content a {
        color: #<%= @ThemeColor.Link %>;
      }
      .content a:hover, .content a:focus {
        color: #<%= @ThemeColor.LinkHover %>;
      }
      nav, .speech-time {
        background: #<%= @ThemeColor.Default.background %>;
        color: #<%= @ThemeColor.Default.color %>;
      }
      .nav-link {
        color: #<%= @ThemeColor.Default.color %>;
      }
      .nav-link:hover {
        color: #<%= @ThemeColor.Default.Hover %>;
      }
      h1, h2, h3, h4, h5, h6 {
        color: #<%= @ThemeColor.Default.titles %>;
      }
      .logo-link, .tagline, .call-action-area .price {
        color: #<%= @ThemeColor.nameConf %>;
      }
      .call-action-area .price {
        color: #<%= @ThemeColor.Price %>;
      }
      .speech-title {
        color: #<%= @ThemeColor.Default.speechTitle %>;
      }
    </style>
  <% end %>
  <!-- / STYLES -->

</head>
<body>

  <div class="global">

    <%-@partial('nav.html.eco', @)%>
    <%-@partial('header.html.eco', @)%>

    <!-- CONTENT -->
    <div class="content" id="content">
      <div class="wrapper">
        <%- @content %>
      </div>
    </div>
    <!-- / CONTENT -->

    <hr />

    <!-- FOOTER -->
    <footer class="footer"></footer>
    <!-- / FOOTER -->

  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/jquery-1.8.3.min.js"><\/script>')</script>
  <script src="js/main.js"></script>

  <% if @conf.address != '': %>
  <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <script src="js/map.js"></script>
  <% end %>

  <!-- GOOGLE ANALYTICS -->
  <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= @site.googleanalytics %>']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
  <!-- /GOOGLE ANALYTICS -->


  <!-- TWEET BUTTON -->
  <script>
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
  </script>
  <!-- /TWEET BUTTON -->
</body>
</html>